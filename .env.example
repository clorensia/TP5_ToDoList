# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
# Local MongoDB
MONGODB_URI=mongodb://localhost:27017/todolist

# MongoDB Atlas (Cloud)
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/todolist?retryWrites=true&w=majority

# JWT Configuration
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_use_a_long_random_string
JWT_EXPIRES_IN=7d

# CORS Configuration (optional)
# CORS_ORIGIN=http://localhost:3000

# Rate Limiting (optional)
# RATE_LIMIT_WINDOW_MS=900000
# RATE_LIMIT_MAX_REQUESTS=100